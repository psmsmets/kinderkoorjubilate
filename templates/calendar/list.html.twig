{% extends 'default.html.twig' %}

{% set body_title = "Kalender" %}
{% set head_title = body_title %}


{% set class_y = 'mt-4 pt-4 pl-2 border-top border-gray' %}
{% set class_m = 'p-2 mb-2 mt-4 bg-pattern' %}

{% block main %}

  <div class="p-3 mb-4">

    <div class="text-center mb-3">
      {% if page.calendar_period.start > date('2017-01-01') %} 
      <a class="btn btn-outline-secondary" href="{{ path('calendar_list', { 'year': page.calendar_period.start|date_modify("-1 year")|date('Y') }) }}"><span aria-hidden="true">&laquo;</span></a>
      {% else %}
      <a class="btn btn-outline-secondary disabled" href="#" disabled><span aria-hidden="true">&laquo;</span></a>
      {% endif %}
      <button class="btn btn-secondary">{{page.calendar_period.start|date('Y')}}-{{page.calendar_period.end|date('y')}}</button>
      <a class="btn btn-outline-secondary" href="{{ path('calendar_list', { 'year': page.calendar_period.start|date_modify("+1 year")|date('Y') }) }}"><span aria-hidden="true">&raquo;</span></a>
    </div>

    <div class="mt-4 d-flex justify-content-between">
      <div><span class="d-none d-md-inline">Kalenders: </span>
      {% for category in page.calendar_categories %}
        <a href="javascript:;" class="badge badge-primary cal-{{category.sequence}}" id="cal-{{category.sequence}}"><i class="far fa-eye"></i> {{category.title}}</a>
      {% endfor %}
      </div>
      {% if date() < page.calendar_period.end %}
      <div>
        <a href="javascript:;" class="badge badge-medium" id="toggle-past"><i class="far fa-eye-slash"></i> voorbije events</a>
      </div>
      {% endif %}
    </div>

    {% if page.calendar_events|length == 0 %}

       <p class="mt-3 mt-md-4"><i class="fas fa-exclamation-circle"></i> Geen items gevonden.</p>

    {% else %}

      <p class="mt-3 mt-md-4"><i class="fas fa-info-circle"></i> Klik op een event voor meer informatie.</p>

      {% set this_year  = date('first day of january this year 23:59') %}
      {% set this_month = date('first day of this month 00:00') %}
      {% set prev_year  = date(page.calendar_events[0].trueEndTime)|date_modify('last day of december this year noon') %}
      {% set prev_month = date(page.calendar_events[0].trueEndTime)|date_modify('last day of this month noon') %}

      <h3 class="{{class_y}}{% if prev_year<this_year %} past{% endif %}">{{prev_year|date('Y')}}</h3>
      <h4 class="{{class_m}}{% if prev_month<this_month %} past{% endif %}">{{prev_month|localizeddate('none', 'none', null, "Europe/Paris", "MMMM")|capitalize}}</h4>

      {% for event in page.calendar_events %}

        {% set cookie = 'calendar_event_'~event.uuid %}
        {% if app.request.cookies.has(cookie) %}
          {% set lastvisit = app.request.cookies.get(cookie)|epoch %}
        {% else %}
          {% set lastvisit = false %}
        {% endif %}
        {% set past  = date(event.trueEndTime) < date() %}
        {% set year  = date(event.trueEndTime)|date_modify('last day of december this year noon') %}
        {% set month = date(event.trueEndTime)|date_modify('last day of this month noon') %}
      
        {% if year>prev_year %}<h3 class="{{class_y}}{% if year<this_year %} past{% endif %}">{{year|date('Y')}}</h3>{% endif %}
        {% if month>prev_month %}<h4 class="{{class_m}}{% if month<this_month %} past{% endif %}">{{month|localizeddate('none', 'none', null, "Europe/Paris", "MMMM")|capitalize}}</h4>{% endif %}

        <div class="media align-top mt-3 cal cal-{{event.category.sequence}}{% if past %}{% if date() < page.calendar_period.end %} text-muted{% endif %} past{% endif %}{% if event.cancelled %} alert-danger rounded{% endif %}" onclick="window.location='{{ path('calendar_event', {'uuid': event.uuid}) }}';">

          <span class="badge badge-dark mr-3 cal cal-{{event.category.sequence}}">{% if past %}<s>{% endif %}{{event.startTime|date('d')}}{% if past %}</s>{% endif %}</span>

          <div class="media-body pb-0 mb-0 lh-125">

            <h5 class="pb-0 mb-1 d-flex justify-content-between">{{event.title|ucfirst}}
              <small>
                {% if event.cancelled %}
                  <span class="badge badge-danger ml-1">Geannuleerd</span>
                {% else %}
                  {% if event.body is not empty %}<span class="badge badge-light">&nbsp;<i class="fas fa-info"></i>&nbsp;</span>{% endif %}
                  {% if event.createdAt > page.lastvisit|date_modify("-14 days") and not lastvisit %}<span class="badge badge-secondary ml-1">Nieuw</span>
                  {% elseif (lastvisit and lastvisit < event.updatedAt) or (not lastvisit and  event.updatedAt > page.lastvisit|date_modify("-7 days"))%}<span class="badge badge-info ml-1">Update</span>
                  {% endif %}
                {% endif %}
              </small>
            </h5>

            <h6 class="mb-2">{{event.getFormattedPeriod|lower}}</h6>

            <ul class="list-unstyled {% if not event.cancelled %}text-muted{% endif %} small mb-1 cal">
              {% if event.location %}<li class="mb-1"><i class="fas fa-map-marked-alt"></i> {{event.location|ucwords}}</li>{% endif %}
            </ul>

          </div>

        </div>

        {% set prev_year = year %}
        {% set prev_month = month %}

      {% endfor %}
    {% endif %}

  </div>

{% endblock %}


{% block javascripts %}
{{ parent() }}
<script>
{% if date() < page.calendar_period.end %}
  $('.past').hide();
  var pasthidden = true;
{% else %}
  var pasthidden = false;
{% endif %}

$(document).ready(function(){

  $('#toggle-past').click(function(e) {
    if (pasthidden){
      $('.past').show(400);
      $('#toggle-past i').removeClass("fa-eye-slash");
      $('#toggle-past i').addClass("fa-eye");
      $.each( $('a[id^="cal-"]'), function() {
        if ($(this).hasClass('hidden')) {
          $('.media.'+$(this).attr('id')).hide();
        }
      });
      pasthidden = false;
    } else {
      $('.past').hide(400);
      $('#toggle-past i').removeClass("fa-eye");
      $('#toggle-past i').addClass("fa-eye-slash");
      pasthidden = true;
    }
  });

  $.each( $('a[id^="cal-"]'), function() {
    $(this).click(function(e) {
      if ($(this).hasClass('hidden')) {
        $('.media.'+$(this).attr('id')).show(400);
        if (pasthidden){ $('.past').hide(); }
        $(this).removeClass("hidden");
        $('#'+$(this).attr('id')+ ' i').removeClass("fa-eye-slash");
        $('#'+$(this).attr('id')+ ' i').addClass("fa-eye");
      } else {
        $('.media.'+$(this).attr('id')).hide(400);
        $(this).addClass("hidden");
        $('#'+$(this).attr('id')+ ' i').removeClass("fa-eye");
        $('#'+$(this).attr('id')+ ' i').addClass("fa-eye-slash");
      }
    });
  });

});
</script>
{% endblock %}
