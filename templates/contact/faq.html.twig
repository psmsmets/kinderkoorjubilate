{% extends 'default.html.twig' %}

{% set body_title = 'Veelgestelde vragen' %}
{% set head_title = 'FAQ' %}

{% block main %}

  <div class="p-3 mb-4">

    {%for faq in page.faqs %}
    <p>
      <a data-toggle="collapse" data-target="#faq{{faq.id}}" aria-expanded="false" aria-controls="faq{{faq.id}}" href="#faq{{faq.id}}">
        {{faq.question}}
      </a>
    </p>
    <div class="row">
      <div class="col">
        <div class="collapse multi-collapse" id="faq{{faq.id}}">
          <div class="pt-0 mt-0 pl-3 pr-3 mb-4">{{faq.answer|raw}}</div>
        </div>
      </div>
    </div>
    {% endfor %}

  </div>

{% endblock %}
