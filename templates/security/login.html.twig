{% extends '_main.html.twig' %}

{% block title %}Inloggen{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  {{ encore_entry_link_tags('security') }}
{% endblock %}


{% block body %}

    <form class="form-signin text-center" method="post">
      <img class="mb-4" src="{{ asset('assets/img/logo/kinderkoor.svg') }}" alt="" height="200">
      {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
      {% endif %}
      {% include 'modules/alerts.html.twig' %}
      <h1 class="h3 mb-3 text-secondary">Gelieve in te loggen</h1>
      <label for="inputEmail" class="sr-only">Email adres</label>
      <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control input-t" placeholder="Email" required autofocus>
      <label for="inputPassword" class="sr-only">Wachtwoord</label>
      <input type="password" name="password" id="inputPassword" class="form-control input-b" placeholder="Wachtwoord" required>
      <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
      >
      <div class="checkbox d-flex">
        <label class="mr-auto">
          <input type="checkbox" name="_remember_me"> herinner mij
        </label>
        <a href="{{ path('security_forgot_password') }}">Wachtwoord vergeten?</a>
      </div>
      <button class="btn btn-lg btn-primary btn-block mt-1" type="submit">Inloggen</button>
    </form>

{% endblock %}
